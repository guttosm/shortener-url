{
    "swagger": "2.0",
    "info": {
        "description": "This is a URL shortener API.\nIt allows you to shorten long URLs and retrieve the original URL using the shortened version.",
        "title": "Shortener URL - API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/shorten": {
            "post": {
                "description": "Receives a long URL and returns a shortened version.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "URLs"
                ],
                "summary": "Shorten a URL",
                "parameters": [
                    {
                        "description": "URL",
                        "name": "url",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.ShortenRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Response with shorter URL",
                        "schema": {
                            "$ref": "#/definitions/dto.ShortenResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dto.ShortenRequest": {
            "type": "object",
            "required": [
                "url"
            ],
            "properties": {
                "url": {
                    "type": "string"
                }
            }
        },
        "dto.ShortenResponse": {
            "type": "object",
            "properties": {
                "short_id": {
                    "type": "string"
                },
                "short_url": {
                    "type": "string"
                }
            }
        }
    }
}